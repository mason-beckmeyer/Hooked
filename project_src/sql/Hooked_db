CREATE TABLE IF NOT EXISTS `Hooked`.`Post` (
    `postID` INT AUTO_INCREMENT,
    `postText` VARCHAR(255),
    `postPicURL` VARCHAR(45),
    `dateOfPost` DATETIME,
    PRIMARY KEY (`postID`)
);

CREATE TABLE IF NOT EXISTS `Hooked`.`User` (
  `userID` INT AUTO_INCREMENT,
  `userEmail` VARCHAR(45),
  `userPassword` VARCHAR(45),
  `userBio` VARCHAR(255),
  `isAlumni` TINYINT,
  `isCompany` TINYINT,
  `isStudent` TINYINT,
  `isFaculty` TINYINT,
  PRIMARY KEY (`userID`)
  );

  CREATE TABLE IF NOT EXISTS `Hooked`.`Follows` (
  `followerID` INT,
  `followeeID` INT,
  PRIMARY KEY (`followerID`, `followeeID`),
  INDEX `fk_Followee_User1_idx` (`followerID` ASC) VISIBLE,
  INDEX `fk_Followee_User2_idx` (`followeeID` ASC) VISIBLE,
  CONSTRAINT `fk_Followee_User1`
    FOREIGN KEY (`followerID`)
    REFERENCES `mydb`.`User` (`userID`)
    ON DELETE NO ACTION
    ON UPDATE NO ACTION,
  CONSTRAINT `fk_Followee_User2`
    FOREIGN KEY (`followeeID`)
    REFERENCES `mydb`.`User` (`userID`)
    ON DELETE NO ACTION
    ON UPDATE NO ACTION
  );


